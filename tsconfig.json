    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["src/*"],
    },
  },
  "include": [
    "src/**/*.ts"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}